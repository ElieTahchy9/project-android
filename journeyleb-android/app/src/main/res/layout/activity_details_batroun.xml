<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp">

    <!-- City Name Title -->
    <TextView
        android:id="@+id/textViewCityName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:text="City Name: Batroun"
        android:textSize="20sp"
        android:textStyle="bold" />

    <!-- City Image -->
    <ImageView
        android:id="@+id/imageViewCity"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:layout_marginBottom="8dp"
        android:scaleType="centerCrop"
        app:srcCompat="@drawable/batroun_city" />

    <!-- Available Locations Title -->
    <TextView
        android:id="@+id/textViewAvailableLocations"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:text="Available Locations"
        android:textSize="18sp"
        android:textStyle="bold" />

    <!-- Available Locations Image -->

    <!-- Register Button -->
    <ImageView
        android:id="@+id/imageViewAvailableLocations"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:layout_marginBottom="8dp"
        android:scaleType="centerCrop"
        app:srcCompat="@drawable/hikingdetailsjbeil" />

    <Button
        android:id="@+id/buttonRegister"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Register" />

</LinearLayout>
